<tr class="<%= cycle 'even', 'odd' %>">
  <td class="contributor-rank">#<%= contributor.rank %></td>
  <td class="contributor-name"><%= link_to_contributor contributor %></td>
  <td class="contributor-seniority"><%= contributor.first_contribution_at.to_date %></td>
  <td class="no-commits">
    <% path = if @time_window
         contributor_commits_in_time_window_path(contributor, @time_window)
       elsif @release
         contributor_commits_in_release_path(contributor, @release)
       elsif @edge
         contributor_commits_in_edge_path(contributor)
       else
         contributor_commits_path(contributor)
       end
    %>
    <%= link_to number_with_delimiter(contributor.ncommits), path %>
  </td>
</tr>
